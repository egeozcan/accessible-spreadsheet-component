{
  "name": "y11n-spreadsheet",
  "version": "1.0.0",
  "description": "Accessible spreadsheet web component built with Lit 3.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "spreadsheet",
    "accessible",
    "web-component",
    "lit",
    "aria",
    "a11y",
    "wai-aria",
    "grid"
  ],
  "author": "Ege Ozcan <egecan@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egeozcan/accessible-spreadsheet-component.git"
  },
  "homepage": "https://github.com/egeozcan/accessible-spreadsheet-component#readme",
  "bugs": {
    "url": "https://github.com/egeozcan/accessible-spreadsheet-component/issues"
  },
  "peerDependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "lit": "^3.0.0",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-essentials": "^8.6.17",
    "@storybook/blocks": "^8.6.17",
    "@storybook/manager-api": "^8.6.17",
    "@storybook/test": "8.6.17",
    "@storybook/web-components": "^8.6.17",
    "@storybook/web-components-vite": "^8.6.17",
    "jsdom": "^28.1.0",
    "storybook": "^8.6.17",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.18"
  }
}
